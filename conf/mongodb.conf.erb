systemLog:
   destination: file
   quiet: true
   path: <%= ENV['OPENSHIFT_MONGODB_DIR'] %>logs/
   logAppend: true
storage:
   dbPath: <%= ENV['OPENSHIFT_MONGODB_DIR'] %>data/
   journal:
      enabled: true
   mmapv1:
      smallFiles: true
processManagement:
   fork: true
   pidFilePath: <%= ENV['OPENSHIFT_MONGODB_DIR'] %>pid/mongodb.pid
net:
   bindIp: <%= ENV['OPENSHIFT_MONGODB_DB_HOST'] %>
   port: 27017
setParameter:
   enableLocalhostAuthBypass: false